generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bookmark {
  id           Int      @id @default(autoincrement())
  title        String
  content      String?
  bookmarkedAt DateTime @default(now())
  author       User?    @relation(fields: [authorId], references: [id])
  authorId     Int?
}

model User {
  id       Int        @id @default(autoincrement())
  email    String     @unique
  username String
  ceatedAt DateTime   @default(now())
  prompt   String[]
  posts    Bookmark[]
}
